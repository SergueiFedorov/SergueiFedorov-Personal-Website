<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">

    <title>@ViewBag.Title</title>
    <style>
        a {
            text-decoration : none;
            color: white;
        }
    </style>

    @*@Styles.Render("~/Content/css")
    @Styles.Render("~/Content/")*@
</head>
<body>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.js"></script>

    <div class="Main">
        <div class="MainNavigation">
             <div class="WebsiteTitle"> Serguei Fedorov </div>
             <div class="Navigation"> </div>
        </div>

        <div style="margin-top: 100px;">
            @RenderBody()
        </div>
        @RenderSection("scripts", required: false)
    </div>
    <div class="Footer">
        <div class="FooterElement">
             <a href="https://github.com/SergueiFedorov/SergueiFedorov-Personal-Website/wiki/API"> API </a> | <a href="https://github.com/SergueiFedorov/SergueiFedorov-Personal-Website">Site Source Code</a> | <a href="https://github.com/SergueiFedorov/SergueiFedorov-Personal-Website/wiki">Documentation</a><br />
              Site Created By Serguei Fedorov
        </div>
    </div>
    <div style="height: 50px;"> </div>
</body>
</html>

<script>
    $(document).ready(function () {
        $.get("@(PersonalWebsite.Code.Tools.RootURL + "navigation/getWebsiteLinks")", null, function (result) 
        {
            $.each(result.Items, function (currentIndex, currentItem) {
                $(".Navigation").append("<div class='MainLink'><a href='" + currentItem.Link + "'> " + currentItem.Text + " </a> </div>");
            });
        });
    });
</script>